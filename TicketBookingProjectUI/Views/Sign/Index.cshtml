@{
    Layout = null;
}
@model TicketBookingProjectUI.Models.LoginViewModel

@if (TempData["SuccessMessage"] != null)
{
    @* <div id="successMessage" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div> *@

    <meta http-equiv="refresh" content="3; url=@Url.Action("Index", "Sign")">
}

<div class="login-container">
    <h2 class="login-title">Login</h2>

    <form asp-action="Index" asp-controller="Sign" method="post" class="login-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="User_Name" class="form-label">Username</label>
            <input asp-for="User_Name" class="form-control" />
            <span asp-validation-for="User_Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="User_Password" class="form-label">Password</label>
            <input asp-for="User_Password" class="form-control" type="password" />
            <span asp-validation-for="User_Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>

    <div class="additional-links">
        <a href="@Url.Action("ForgotPassword", "Account")" class="forgot-password">Forgot Password?</a>
        <span>|</span>
        <a href="@Url.Action("Register", "Account")" class="new-user">New User?</a>
    </div>
</div>

<style>
    /* Custom CSS for the login page */
    body {
        background-color: #f8f9fa; /* Light gray background */
        font-family: Arial, sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 20px;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        text-align: center;
        margin-bottom: 20px;
        color: #007bff; /* Blue color for title */
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #333; /* Dark gray color for labels */
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ced4da;
        border-radius: 3px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 3px;
        transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue color on hover */
        }

    .additional-links {
        margin-top: 20px;
        text-align: center;
    }

    .forgot-password,
    .new-user {
        text-decoration: none;
        color: #007bff;
        transition: color 0.15s ease-in-out;
    }

        .forgot-password:hover,
        .new-user:hover {
            color: #0056b3; /* Darker blue color on hover */
        }

    .additional-links span {
        margin: 0 10px;
        color: #999; /* Light gray color for separator */
    }
</style>
