@model TicketBookingProjectUI.Models.ForgotPasswordViewModel
@{
    Layout = null;
}

<style>
    /* Custom CSS for the forgot password form */
    body {
        background-color: #f8f9fa; /* Light gray background */
    }

    form {
        max-width: 400px;
        margin: 0 auto;
        margin-top: 50px; /* Adjust top margin as needed */
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px; /* Adjust bottom margin as needed */
    }

    .form-group {
        margin-bottom: 20px; /* Adjust bottom margin as needed */
    }

    label {
        display: block;
        margin-bottom: 5px; /* Add space between label and input */
    }

    .form-control {
        width: 100%; /* Make input fields fill the entire width */
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: .25rem;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

        .form-control:focus {
            color: #495057;
            background-color: #fff;
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        width: 100%; /* Make submit button fill the entire width */
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: .25rem;
        transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .text-danger {
        color: #dc3545; /* Red color for validation messages */
    }

    /* Style the "Back to Login" button to resemble the submit button */
    .btn-back-to-login {
        display: block;
       /*  width: 100%; */ /* Make the link fill the entire width */
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #007bff;
        background-color: transparent;
        /* border: 1px solid #007bff; */
        border-radius: .25rem;
        transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        text-align: center;
        text-decoration: none;
    }

        .btn-back-to-login:hover {
            color: #0056b3;
            background-color: rgba(0, 123, 255, 0.1);
            border-color: #0056b3;
        }

</style>

<form asp-action="ForgotPassword" asp-controller="Account" method="post">
    <h2>Forgot Password</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UsernameOrEmail">Username or Email</label>
        <input asp-for="UsernameOrEmail" class="form-control" />
        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword">Enter New Password</label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <!-- Style the "Back to Login" link to resemble the submit button -->
    <a href="/Sign/Index" class="btn-back-to-login">Back to Login</a>
</form>
