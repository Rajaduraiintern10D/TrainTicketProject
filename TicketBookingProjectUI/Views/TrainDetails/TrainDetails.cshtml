@page
@model dynamic
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 60px;
        }

        h2 {
            color: #333;
        }

        .form-row {
            /*  display: flex; */
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .form-group {
            flex: auto;
            margin-right: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #666;
        }

        input[type="date"] {
            width: 30%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            padding: 10px 20px;
            background-color: #0d6efd;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0d6efd;
            }
    </style>
</head>
<body>
    <h2>Date-Based Train Information Retrieval</h2>

    <form method="get" action="/TrainDetails/GetTrainDate">
        <div class="form-row">
            <div class="form-group">
                <label for="fromDate">From Date:</label>
                <input type="date" id="fromDate" name="fromDate" required>
            </div>
            <div class="form-group">
                <label for="toDate">To Date:</label>
                <input type="date" id="toDate" name="toDate">
            </div>
            <button type="submit">Submit</button>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.TrainDateResponseData))
        {
            @Html.Partial("TrainDetailsPartialView", (object)ViewBag.TrainDateResponseData)
        }
    </form>
    <!-- Render partial view below the form -->
    
    <form method="get" action="/TrainDetails/GetSeatAvilability">
        <div class="form-row">
            <div class="form-group">
                <label for="trainNumber">Train Number:</label>
                <input type="number" id="trainNumber" name="trainNumber" required>
            </div>
            <button type="submit">Get Seat Availability</button>
        </div>
        
    </form>
    @if (!string.IsNullOrEmpty(ViewBag.SeatAvailabilityResponseData))
    {
        @Html.Partial("SeatAvailabilityPartialView", (object)ViewBag.SeatAvailabilityResponseData)
    }
    <!-- Render seat availa
    <!-- Form for getting all train details -->
    <form method="get" action="/TrainDetails/GetAllTrainDetails">
        <button type="submit">Get All Train Details</button>
    </form>
    @if (!string.IsNullOrEmpty(ViewBag.AllTrainDetailsResponseData))
    {
        @Html.Partial("GetAllTrainDetailsPartialView", (object)ViewBag.AllTrainDetailsResponseData)
    }

</body>
</html>
